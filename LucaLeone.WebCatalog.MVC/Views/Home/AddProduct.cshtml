@{
    ViewData["Title"] = "Add Product";
}

<div class="row">
    <h1>Add Product:</h1>
    <div>
        <form id="AddProductForm" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" placeholder="product name" name="name" class="form-control" required/>
            </div>
            <div class="form-group">
                <label for="price">Price (in €):</label>
                <input type="number" placeholder="product price" name="price" min="0.10" value="0.99" step="0.01" class="form-control" required/>
            </div>
            <div class="form-group">
                <label for="photo">Product picture:</label>
                <input type="url" placeholder="photo url" name="photo" class="form-control"/>
                @*<input type="file" accept="image/*" class="form-control-file" name="photo" aria-describedby="fileHelp" />*@
            </div>
            <input type="submit" value="Save product" id="AddProductButton" class="btn btn-primary"/>
        </form>
    </div>
</div>
